<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>mx.com.gentera</groupId>
		<artifactId>seguros</artifactId>
		<version>1.0.0</version>
	</parent>

	<groupId>mx.com.gentera.medicos</groupId>
	<artifactId>medicos</artifactId>
	<packaging>war</packaging>
	<name>medicos</name>
	<description>Servicios creados para los indicadores medicos</description>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<cxf.version>3.1.13</cxf.version>
	</properties>

	<dependencies>
		<!--dependenciaspringframewor -->
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-web</artifactId>
		</dependency>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-tomcat</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-actuator</artifactId>
		</dependency>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-configuration-processor</artifactId>
			<optional>true</optional>
		</dependency>

		<!-- Dependencias CXF -->
		<dependency>
			<groupId>org.apache.cxf</groupId>
			<artifactId>cxf-spring-boot-starter-jaxws</artifactId>
			<version>${cxf.version}</version>
		</dependency>

		<!-- Dependencias proyectos internos -->
		<dependency>
			<groupId>mx.com.gentera.seguros.common</groupId>
			<artifactId>zip</artifactId>
			<version>1.0.0</version>
		</dependency>
		<dependency>
			<groupId>mx.com.gentera.seguros.common</groupId>
			<artifactId>sftp</artifactId>
			<version>1.0.0</version>
		</dependency>
		<dependency>
			<groupId>mx.com.gentera.seguros.common</groupId>
			<artifactId>email</artifactId>
			<version>1.0.0</version>
		</dependency>
		<dependency>
			<groupId>mx.com.gentera.seguros.common</groupId>
			<artifactId>persistence</artifactId>
			<version>1.0.0</version>
		</dependency>
	</dependencies>

	<build>
		<finalName>medicos</finalName>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<version>3.3.2</version>
			</plugin>

			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
				<executions>
					<execution>
						<goals>
							<goal>build-info</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<!-- Plugin CXF -->
			<plugin>
				<groupId>org.apache.cxf</groupId>
				<artifactId>cxf-codegen-plugin</artifactId>
				<version>${cxf.version}</version>
				<dependencies>
					<dependency>
						<groupId>javax.annotation</groupId>
						<artifactId>javax.annotation-api</artifactId>
						<version>1.3.2</version>
					</dependency>
					<dependency>
						<groupId>javax.activation</groupId>
						<artifactId>javax.activation-api</artifactId>
						<version>1.2.0</version>
					</dependency>

					<dependency>
						<groupId>javax.xml.bind</groupId>
						<artifactId>jaxb-api</artifactId>
						<version>2.3.1</version>
					</dependency>
					<dependency>
						<groupId>javax.xml.ws</groupId>
						<artifactId>jaxws-api</artifactId>
						<version>2.3.1</version>
					</dependency>

					<dependency>
						<groupId>com.sun.xml.ws</groupId>
						<artifactId>jaxws-rt</artifactId>
						<version>2.3.1</version>
					</dependency>
				</dependencies>
				<executions>
					<execution>
						<id>generate-sources</id>
						<phase>generate-sources</phase>
						<configuration>
							<sourceRoot>
								${project.build.directory}/generated/cxf/server</sourceRoot>

							<wsdlOptions>
								<wsdlOption>
									<wsdl>
										${basedir}/src/main/resources/wsdl/getPromotores.wsdl</wsdl>
									<bindingFiles>
										<bindingFile>
											${basedir}/src/main/resources/common-binding.xml</bindingFile>
									</bindingFiles>
								</wsdlOption>
								<wsdlOption>
									<wsdl>
										${basedir}/src/main/resources/wsdl/getClientes.wsdl</wsdl>
									<bindingFiles>
										<bindingFile>
											${basedir}/src/main/resources/common-binding.xml</bindingFile>
									</bindingFiles>
								</wsdlOption>
								<wsdlOption>
									<wsdl>
										${basedir}/src/main/resources/wsdl/getAgencias.wsdl</wsdl>
									<bindingFiles>
										<bindingFile>
											${basedir}/src/main/resources/common-binding.xml</bindingFile>
									</bindingFiles>
								</wsdlOption>
								<wsdlOption>
									<wsdl>
										${basedir}/src/main/resources/wsdl/getDoctors.wsdl</wsdl>
									<bindingFiles>
										<bindingFile>
											${basedir}/src/main/resources/common-binding.xml</bindingFile>
									</bindingFiles>
								</wsdlOption>
								<wsdlOption>
									<wsdl>
										${basedir}/src/main/resources/wsdl/comportamientos.wsdl</wsdl>
									<bindingFiles>
										<bindingFile>
											${basedir}/src/main/resources/common-binding.xml</bindingFile>
									</bindingFiles>
								</wsdlOption>
								<wsdlOption>
									<wsdl>
										${basedir}/src/main/resources/wsdl/flagCoverage.wsdl</wsdl>
									<bindingFiles>
										<bindingFile>
											${basedir}/src/main/resources/common-binding.xml</bindingFile>
									</bindingFiles>
								</wsdlOption>
								<wsdlOption>
									<wsdl>
										${basedir}/src/main/resources/wsdl/getHospitales.wsdl</wsdl>
									<bindingFiles>
										<bindingFile>
											${basedir}/src/main/resources/common-binding.xml</bindingFile>
									</bindingFiles>
								</wsdlOption>
								<wsdlOption>
									<wsdl>
										${basedir}/src/main/resources/wsdl/hospitalType.wsdl</wsdl>
									<bindingFiles>
										<bindingFile>
											${basedir}/src/main/resources/common-binding.xml</bindingFile>
									</bindingFiles>
								</wsdlOption>
								<wsdlOption>
									<wsdl>
										${basedir}/src/main/resources/wsdl/blackList.wsdl</wsdl>
									<bindingFiles>
										<bindingFile>
											${basedir}/src/main/resources/common-binding.xml</bindingFile>
									</bindingFiles>
								</wsdlOption>
								<wsdlOption>
									<wsdl>
										${basedir}/src/main/resources/wsdl/createUpdateHospital.wsdl</wsdl>
									<bindingFiles>
										<bindingFile>
											${basedir}/src/main/resources/common-binding.xml</bindingFile>
									</bindingFiles>
								</wsdlOption>
								<wsdlOption>
									<wsdl>
										${basedir}/src/main/resources/wsdl/getSubdirection.wsdl</wsdl>
									<bindingFiles>
										<bindingFile>
											${basedir}/src/main/resources/common-binding.xml</bindingFile>
									</bindingFiles>
								</wsdlOption>

								<wsdlOption>
									<wsdl>
										${basedir}/src/main/resources/wsdl/getPromotersByOffice.wsdl</wsdl>
									<bindingFiles>
										<bindingFile>
											${basedir}/src/main/resources/common-binding.xml</bindingFile>
									</bindingFiles>
								</wsdlOption>

								<wsdlOption>
									<wsdl>
										${basedir}/src/main/resources/wsdl/getIndicators.wsdl</wsdl>
									<bindingFiles>
										<bindingFile>
											${basedir}/src/main/resources/common-binding.xml</bindingFile>
									</bindingFiles>
								</wsdlOption>

								<wsdlOption>
									<wsdl>
										${basedir}/src/main/resources/wsdl/medicalIndicators.wsdl</wsdl>
									<bindingFiles>
										<bindingFile>
											${basedir}/src/main/resources/common-binding.xml</bindingFile>
									</bindingFiles>
								</wsdlOption>

								<wsdlOption>
									<wsdl>
										${basedir}/src/main/resources/wsdl/updateIMClaim.wsdl</wsdl>
									<bindingFiles>
										<bindingFile>
											${basedir}/src/main/resources/common-binding.xml</bindingFile>
									</bindingFiles>
								</wsdlOption>

								<wsdlOption>
									<wsdl>
										${basedir}/src/main/resources/wsdl/searchClaims.wsdl</wsdl>
									<bindingFiles>
										<bindingFile>
											${basedir}/src/main/resources/common-binding.xml</bindingFile>
									</bindingFiles>
								</wsdlOption>

							</wsdlOptions>
						</configuration>
						<goals>
							<goal>wsdl2java</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>